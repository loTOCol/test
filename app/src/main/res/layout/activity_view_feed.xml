<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music_home_gradient"
    tools:context=".feature.feed.ui.ViewFeedActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="14dp"
            android:paddingTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_feed_topbar"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <ImageButton
                    android:id="@+id/back_feedview"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_music_icon_button"
                    android:padding="10dp"
                    app:srcCompat="@drawable/arrowback" />

                <TextView
                    android:id="@+id/feedview_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="날짜"
                    android:textColor="@color/music_text_main"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/delete_viewfeed"
                    android:layout_width="66dp"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_feed_delete_button"
                    android:text="삭제"
                    android:textAllCaps="false"
                    android:textColor="@color/music_text_main"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/FeedviewMapLayout"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_feed_map_card"
                android:orientation="vertical"
                android:padding="1dp">

                <fragment
                    android:id="@+id/feedviewmap"
                    android:name="com.naver.maps.map.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout="@android:layout/activity_list_item" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/textViewfeedview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="6dp"
                        android:text=""
                        android:textColor="@color/music_text_sub"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:id="@+id/image_feedview"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:background="@drawable/bg_feed_post_card">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/feedviewpager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipChildren="false"
                            android:clipToPadding="false" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/curpage_feedview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center"
                        android:text="0 / 0"
                        android:textColor="@color/music_text_sub"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/record_feedview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_map_input_field"
                        android:gravity="start"
                        android:minHeight="110dp"
                        android:padding="12dp"
                        android:text="내용"
                        android:textColor="@color/music_text_main"
                        android:textSize="15sp" />

                    <ListView
                        android:id="@+id/loclist_feedview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0dp" />

                    <Switch
                        android:id="@+id/openset_viewfeed"
                        android:layout_width="140dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="공개 설정"
                        android:textColor="@color/music_text_main"
                        android:textSize="13sp"
                        android:visibility="invisible" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="90dp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blackbox_feed"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="244dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@drawable/bg_feed_metric_top">

                <ImageButton
                    android:id="@+id/emotion_feedview"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/feeling_smiling_xml"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/weather_feedview"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/weather_sunny_xml"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/emotion_feedview"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ddddaaa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="이동거리"
                    android:textColor="@color/music_text_sub"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/weather_feedview"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/distext_feedview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="1.232 Km"
                    android:textColor="@color/music_text_main"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/bg_feed_metric_bottom">

                <TextView
                    android:id="@+id/feedviewstep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="10000 걸음"
                    android:textColor="@color/music_text_main"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/feedview_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="21:30 ~ 22:00"
                    android:textColor="@color/music_text_main"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/loading_feedview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blurblack"
            android:gravity="center"
            android:text="로딩중..."
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
