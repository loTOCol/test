<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_music_surface"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="18dp">

    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:background="@drawable/bg_music_icon_button"
        android:padding="14dp"
        android:src="@drawable/target_iconfinal"
        android:tint="@color/white" />

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/scdream9"
        android:text="목표 걸음 수 설정"
        android:textColor="@color/music_text_main"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/dialog_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp" />

</LinearLayout>
