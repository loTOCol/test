<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music_home_gradient"
    tools:context=".feature.mate.ui.MateViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_home_topbar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageButton
                android:id="@+id/back_mateview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_music_icon_button"
                android:padding="10dp"
                app:srcCompat="@drawable/arrowback" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="메이트 게시글"
                android:textColor="@color/music_text_main"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_feed_map_card"
            android:orientation="vertical"
            android:padding="6dp">

            <fragment
                android:id="@+id/map_mateview"
                android:name="com.naver.maps.map.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@android:layout/activity_list_item" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="96dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_mate_filter_panel"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userimg_mateview"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:src="@drawable/blank_profile"
                        app:civ_border_color="@color/music_primary"
                        app:civ_border_overlay="true"
                        app:civ_border_width="2dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="10dp">

                        <TextView
                            android:id="@+id/usertitle_mateview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="[칭호]"
                            android:textColor="@color/music_text_sub"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/userinfo_mateview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="이름 (남성/20-29)"
                            android:textColor="@color/music_text_main"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/date_mateview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/bg_home_soft_button"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="5dp"
                            android:text="10/4 - 10/10"
                            android:textColor="@color/music_text_main"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/locations_mateview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="장소1, 장소2, 장소3"
                            android:textColor="@color/music_text_sub"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_mate_filter_panel"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/title_mateview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="메이트 게시물 제목란"
                        android:textColor="@color/music_text_main"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/content_mateview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="TextView"
                        android:textColor="@color/music_text_main"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/mate_mateview"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_music_action_button"
        android:text="메이트 신청하기"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/loading_mateview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blurblack"
        android:gravity="center"
        android:text="로딩중..."
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

</FrameLayout>
