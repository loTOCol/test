<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_feed_topbar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이번 주 걷기 랭킹"
                android:textColor="@color/music_text_main"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ranking_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="주간 누적 걸음 수 기준 상위 10명"
                android:textColor="@color/music_text_sub"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/button_refresh"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/bg_home_soft_button"
            android:padding="8dp"
            android:src="@drawable/icon_refresh"
            android:tint="@color/music_primary" />
    </LinearLayout>

    <TextView
        android:id="@+id/ranking_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingHorizontal="6dp"
        android:text="업데이트: -"
        android:textColor="@color/music_text_sub"
        android:textSize="11sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="6dp"
        android:clipToPadding="false"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ranking_top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_feed_post_card"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2위"
                        android:textColor="@color/music_text_sub"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ranking_second_image"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/blank_profile"
                        app:civ_border_color="@color/music_card_stroke"
                        app:civ_border_width="1dp" />

                    <TextView
                        android:id="@+id/ranking_second_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingHorizontal="4dp"
                        android:text="-"
                        android:textColor="@color/music_text_main"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ranking_second_step"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="- 걸음"
                        android:textColor="@color/music_text_sub"
                        android:textSize="12sp" />
                </LinearLayout>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_profile_hero_card"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1위"
                        android:textColor="@color/music_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ranking_first_image"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/blank_profile"
                        app:civ_border_color="@color/music_primary"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/ranking_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingHorizontal="4dp"
                        android:text="-"
                        android:textColor="@color/music_text_main"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ranking_first_step"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="- 걸음"
                        android:textColor="@color/music_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_feed_post_card"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3위"
                        android:textColor="@color/music_text_sub"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ranking_third_image"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/blank_profile"
                        app:civ_border_color="@color/music_card_stroke"
                        app:civ_border_width="1dp" />

                    <TextView
                        android:id="@+id/ranking_third_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingHorizontal="4dp"
                        android:text="-"
                        android:textColor="@color/music_text_main"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ranking_third_step"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="- 걸음"
                        android:textColor="@color/music_text_sub"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="4위 ~ 10위"
                android:textColor="@color/music_text_main"
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ranking_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
