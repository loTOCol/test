<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music_home_gradient"
    tools:context=".feature.feed.ui.FeedWriteActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="14dp"
            android:paddingTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_feed_topbar"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <ImageButton
                    android:id="@+id/back_feedwrite"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_music_icon_button"
                    android:padding="10dp"
                    app:srcCompat="@drawable/arrowback" />

                <TextView
                    android:id="@+id/feed_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="기록 작성"
                    android:textColor="@color/music_text_main"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/FeedMapLayout"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_feed_map_card"
                android:orientation="vertical"
                android:padding="1dp">

                <fragment
                    android:id="@+id/feedmap"
                    android:name="com.naver.maps.map.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout="@android:layout/activity_list_item" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/blackbox_feed"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/bg_feed_metric_top">

                    <ImageButton
                        android:id="@+id/emotion_feedview"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/feeling_smiling_xml"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/weather_feedview"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginStart="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/weather_sunny_xml"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/emotion_feedview"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ddddaaa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="운동 요약"
                        android:textColor="@color/music_text_sub"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/weather_feedview"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/distext_feedview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="1.232 Km"
                        android:textColor="@color/music_text_main"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_feed_metric_bottom">

                    <TextView
                        android:id="@+id/feedviewstep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="10000 걸음"
                        android:textColor="@color/music_text_main"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/feedview_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="21:30 ~ 22:00"
                        android:textColor="@color/music_text_main"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/seqtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginBottom="6dp"
                        android:text="사진"
                        android:textColor="@color/music_text_sub"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:id="@+id/image_feedwrite"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/bg_feed_post_card">

                        <ImageView
                            android:id="@+id/imagebackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/addphoto_feedwrite" />

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipChildren="false"
                            android:clipToPadding="false" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/curpage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center"
                        android:text="0 / 0"
                        android:textColor="@color/music_text_sub"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/delimage"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginHorizontal="8dp"
                            android:background="@drawable/bg_music_icon_button"
                            android:padding="10dp"
                            android:src="@drawable/trash_can_xml" />

                        <ImageButton
                            android:id="@+id/addimage"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginHorizontal="8dp"
                            android:background="@drawable/bg_music_action_button"
                            android:padding="10dp"
                            android:src="@drawable/addphoto_feedwrite_btn" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/record_feedwrite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_map_input_field"
                        android:gravity="top|start"
                        android:hint="오늘 산책 기록과 느낀 점을 적어주세요"
                        android:minHeight="120dp"
                        android:padding="12dp"
                        android:textColor="@color/music_text_main"
                        android:textColorHint="@color/music_text_sub"
                        android:textSize="15sp" />

                    <ListView
                        android:id="@+id/loclist_feed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_feed_empty_card"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0dp"
                        android:padding="6dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_feed_empty_card"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="피드 공개"
                            android:textColor="@color/music_text_main"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <Switch
                            android:id="@+id/openset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ON/OFF"
                            android:textColor="@color/music_text_sub"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/finish_feedwrtie"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_music_action_button"
                        android:text="기록 업로드"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="90dp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <TextView
            android:id="@+id/loading_feed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@color/blurblack"
            android:gravity="center"
            android:text="업로드중..."
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
