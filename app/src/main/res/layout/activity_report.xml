<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_report_sheet"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/icon_siren" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신고 사유 선택"
                android:textColor="@color/music_text_main"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="해당 유저에 대한 사유를 1개 선택해주세요."
                android:textColor="@color/music_text_sub"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/report_reason1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_report_option"
            android:text="상의 없이 약속을 취소했어요"
            android:textAllCaps="false"
            android:textColor="@color/music_text_main"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/report_reason2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_report_option"
            android:text="약속 장소에 나오지 않았어요"
            android:textAllCaps="false"
            android:textColor="@color/music_text_main"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/report_reason3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_report_option"
            android:text="욕설/성희롱 등 불쾌한 언행이 있었어요"
            android:textAllCaps="false"
            android:textColor="@color/music_text_main"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/reason_extra"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_report_option"
            android:text="기타 사유 직접 입력"
            android:textAllCaps="false"
            android:textColor="@color/music_text_main"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/reportreason"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_report_input"
            android:gravity="top|start"
            android:hint="신고 사유를 입력해주세요."
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textColor="@color/music_text_main"
            android:textColorHint="@color/music_text_sub"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/send_report"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_report_submit"
        android:text="신고 접수"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

</LinearLayout>
