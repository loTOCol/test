<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music_home_gradient"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnPrevious"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_music_icon_button"
            android:contentDescription="뒤로가기"
            android:padding="10dp"
            android:src="@drawable/mypage_back"
            android:tint="@android:color/white" />

        <TextView
            android:id="@+id/music_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="음악 종류"
            android:textColor="@color/music_text_main"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pace_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pace_stamp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:text="PACE"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/music_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="음악 이름"
        android:textColor="@color/music_text_main"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_music_surface"
        android:orientation="vertical"
        android:padding="12dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/musicPlay_img"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gfmusic"
            app:civ_border="false"
            app:civ_shadow="true"
            app:civ_shadow_color="#33000000"
            app:civ_shadow_radius="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/music_progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="10dp"
                android:minHeight="10dp"
                android:paddingHorizontal="2dp"
                android:progressDrawable="@drawable/music_seekbar_progress"
                android:thumb="@drawable/music_seekbar_thumb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_playingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="@color/music_text_sub"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_playTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="@color/music_text_sub"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_music_pre"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_music_icon_button"
            android:padding="12dp"
            android:src="@drawable/btn_play_pre"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btn_music_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="26dp"
            android:background="@drawable/bg_music_icon_button"
            android:padding="12dp"
            android:src="@drawable/btn_play"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btn_music_next"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_music_icon_button"
            android:padding="12dp"
            android:src="@drawable/btn_play_next"
            android:tint="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_music_surface"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp">

        <ImageView
            android:id="@+id/ivMascotWalk"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="fitCenter"
            android:src="@drawable/animal_walk1_with" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pace_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 페이스: LOW"
                android:textColor="@color/music_text_main"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_pace_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="천천히 걷기 템포"
                android:textColor="@color/music_text_sub"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
