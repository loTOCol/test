<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ChatLayout"
    tools:context=".ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_music_home_gradient"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_feed_topbar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageButton
                android:id="@+id/back_chat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_music_icon_button"
                android:padding="10dp"
                app:srcCompat="@drawable/arrowback" />

            <TextView
                android:textColor="@color/music_text_main"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingStart="10dp"
                android:gravity="center|start"
                android:id="@+id/chat_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView" />

            <ImageButton
                android:id="@+id/menu_chat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_home_soft_button"
                android:padding="10dp"
                android:src="@drawable/menu_icon"
                android:tint="@color/music_primary"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/music_card_stroke"/>

        <LinearLayout
            android:id="@+id/chat_steps_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_feed_empty_card"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오늘 걸음 수"
                android:textColor="@color/music_text_main"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="나"
                android:textColor="@color/music_text_sub"
                android:textSize="11sp" />

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/myBarChart"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="상대"
                android:textColor="@color/music_text_sub"
                android:textSize="11sp" />

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/otherBarChart"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/msglist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_board_list_container"
                android:clipToPadding="false"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="@android:color/transparent"
                android:paddingHorizontal="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:transcriptMode="normal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_feed_empty_card"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <EditText
                android:id="@+id/msg"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="6"
                android:background="@drawable/bg_map_input_field"
                android:hint="메시지 입력"
                android:inputType="textPersonName"
                android:paddingHorizontal="12dp"
                android:textColor="@color/music_text_main"
                android:textColorHint="@color/music_text_sub"/>

            <ImageButton
                android:id="@+id/emojiButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_music_action_button"
                android:src="@drawable/addphoto_feedwrite_btn"
                android:padding="9dp"
                android:scaleType="centerInside"
                android:tint="@color/white" />

            <ImageButton
                android:id="@+id/sendmsg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_music_action_button"
                android:padding="9dp"
                android:src="@drawable/icon_send_xml"
                android:tint="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_home_calendar_card"
        android:layout_gravity="end"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:textSize="24sp"
            android:gravity="start"
            android:textStyle="bold"
            android:textColor="@color/music_text_main"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="채팅 참가자" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/music_card_stroke"/>

        <ListView
            android:layout_weight="12"
            android:id="@+id/chatuserlist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="8dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:paddingHorizontal="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/music_card_stroke"/>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <Button
                android:id="@+id/rename_chatroom"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/bg_feed_delete_button"
                android:text="채팅방 이름 변경"
                android:textAllCaps="false"
                android:textColor="@color/music_primary"
                android:textSize="13sp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
