<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music_home_gradient"
    tools:context=".feature.schedule.ui.ScheduleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_feed_topbar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageButton
                android:id="@+id/back_schedule"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_home_soft_button"
                android:contentDescription="뒤로가기"
                android:padding="10dp"
                app:srcCompat="@drawable/arrowback"
                app:tint="@color/music_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="약속 목록"
                android:textColor="@color/music_text_main"
                android:textSize="19sp"
                android:textStyle="bold" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp">

            <ListView
                android:id="@+id/schedule_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="@android:color/transparent"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/nulltext_schedule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="약속 목록이 비어있습니다."
                android:textColor="@color/music_text_sub"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/maplayout_schedule"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_feed_topbar"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_home_soft_button"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/title_map_schedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="약속 지도"
                android:textColor="@color/music_text_main"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/close_map_schedule"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_home_soft_button"
                android:padding="7dp"
                android:src="@drawable/cancel_xml"
                android:tint="@color/music_primary" />
        </LinearLayout>

        <fragment
            android:id="@+id/map_schedule"
            android:name="com.naver.maps.map.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            tools:layout="@android:layout/activity_list_item" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userlistlayout_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_feed_topbar"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_home_soft_button"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/title_user_schedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="참가자"
                android:textColor="@color/music_text_main"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/close_user_schedule"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_home_soft_button"
                android:padding="7dp"
                android:src="@drawable/cancel_xml"
                android:tint="@color/music_primary" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="8dp">

            <ListView
                android:id="@+id/userlist_schedule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dp" />

            <TextView
                android:id="@+id/loading_userlist_schedule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blurblack"
                android:gravity="center"
                android:text="로딩중..."
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>
