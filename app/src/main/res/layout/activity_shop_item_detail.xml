<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_feed_post_card"
    android:gravity="center_vertical"
    android:minHeight="92dp"
    android:orientation="horizontal"
    android:padding="12dp">

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_profile_stat_chip"
        android:padding="6dp"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WALING ANIMAL"
            android:textColor="@color/music_text_main"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Description"
            android:textColor="@color/music_text_sub"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="1000 COIN"
            android:textColor="@color/music_primary"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
