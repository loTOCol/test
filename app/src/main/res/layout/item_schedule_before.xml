<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="4dp"
    android:paddingTop="6dp"
    android:paddingBottom="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_feed_post_card"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/title_schedulebef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="약속 제목"
            android:textColor="@color/music_text_main"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="2022/10/10 10:20 ~ 2022/10/11 11:20"
            android:textColor="@color/music_text_sub"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/gochat_schedule"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/bg_home_soft_button"
                android:text="채팅방"
                android:textAllCaps="false"
                android:textColor="@color/music_text_main"
                android:textSize="13sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/golocation_schedule"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_home_soft_button"
                android:text="위치"
                android:textAllCaps="false"
                android:textColor="@color/music_text_main"
                android:textSize="13sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gouser_schedule"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_music_action_button"
                android:text="참가자"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
