<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music_home_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GIRIN MUSIC"
            android:textColor="@color/music_text_sub"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/scdream9"
            android:text="기린과 함께 걷는\n뮤직 트레이닝"
            android:textColor="@color/music_text_main"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_view_additional"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="14dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/music_ki2" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/image_button_first_floor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_music_menu_card"
                android:contentDescription="음악 스트리밍" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="음악 스트리밍"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="12dp">

            <ImageButton
                android:id="@+id/image_button_second_floor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_music_menu_card"
                android:contentDescription="인터벌 운동" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="인터벌 운동"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="12dp">

            <ImageButton
                android:id="@+id/image_button_third_floor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_music_menu_card"
                android:contentDescription="음악 추천 및 업로드" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="음악 추천 · 업로드"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>
</ScrollView>
