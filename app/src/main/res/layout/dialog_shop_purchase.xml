<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_feed_post_card"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_purchase_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구매 확인"
        android:textColor="@color/music_text_main"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_purchase_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="WALING ANIMAL 1"
        android:textColor="@color/music_text_main"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_purchase_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="가격: 1000 코인"
        android:textColor="@color/music_primary"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_purchase_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="이 상품을 구매하시겠습니까?"
        android:textColor="@color/music_text_sub"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_purchase_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_profile_stat_chip"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:text="취소"
            android:textColor="@color/music_text_main"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_purchase_confirm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_board_chip"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:text="구매"
            android:textColor="@color/music_primary"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>