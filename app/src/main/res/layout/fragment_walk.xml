<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="52dp"
    android:background="@drawable/bg_music_home_gradient"
    android:fillViewport="true"
    tools:context=".feature.walk.ui.WalkFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_walk_stat_card"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/temperatureText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 기온"
                    android:textColor="@color/music_text_sub"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/temperatureTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="--.-°C"
                    android:textColor="@color/music_text_main"
                    android:textSize="27sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <ImageView
                android:id="@+id/weatherImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_walk_hero_card"
            android:orientation="vertical"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="오늘의 걸음"
                    android:textColor="@color/music_text_main"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/goalSteps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_walk_stat_card"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="목표 걸음 수: 1000"
                    android:textColor="@color/music_text_sub"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="236dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_walk_soft_panel">

                <View
                    android:layout_width="204dp"
                    android:layout_height="204dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_walk_outer_ring" />

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/pieChart"
                    android:layout_width="182dp"
                    android:layout_height="182dp"
                    android:layout_gravity="center"
                    app:cpb_background_progressbar_color="#66DFC6A0"
                    app:cpb_background_progressbar_width="14dp"
                    app:cpb_progress_direction="to_right"
                    app:cpb_progressbar_color="#FF8F6C44"
                    app:cpb_progressbar_width="16dp"
                    app:cpb_round_border="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/currentSteps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/music_text_main"
                        android:textSize="42sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="steps"
                        android:textColor="@color/music_text_sub"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/gifImageView"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/walkgif" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/bg_walk_metric_card"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="포인트"
                            android:textColor="@color/music_text_sub"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/pointsIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/gf_coin" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0"
                        android:textColor="@color/music_text_main"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_walk_metric_card"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="칼로리"
                            android:textColor="@color/music_text_sub"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/caloriesIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/gf_cal" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/calories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0"
                        android:textColor="@color/music_text_main"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_walk_stat_card"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/comparisonTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="어제 대비"
                    android:textColor="@color/music_text_sub"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/stepsDifferenceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="0"
                    android:textColor="@color/music_text_main"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_walk_stat_card"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주간 걸음 캘린더"
                android:textColor="@color/music_text_sub"
                android:textSize="11sp"
                android:textStyle="bold" />

            <in.akshit.horizontalcalendar.HorizontalCalendarView
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
