<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feedListbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music_home_gradient"
    android:orientation="vertical"
    android:paddingHorizontal="14dp"
    android:paddingTop="14dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_board_header"
        android:orientation="vertical"
        android:paddingHorizontal="14dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_board_chip"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="WalkingMate Board"
            android:textColor="@color/music_text_main"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="피드 게시판"
            android:textColor="@color/music_text_main"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="산책 기록을 깔끔하게 확인하고 관리하세요"
            android:textColor="@color/music_text_sub"
            android:textSize="12sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/feedListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_board_list_container"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:listSelector="@android:color/transparent"
        android:paddingHorizontal="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="16dp" />

</LinearLayout>
