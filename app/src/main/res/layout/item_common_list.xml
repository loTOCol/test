<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_feed_post_card"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_music_icon_button"
            android:padding="9dp"
            android:src="@drawable/icon_feed_xml"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/datelist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="9dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Title"
            android:textColor="@color/music_text_main"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/listdelbtn"
            android:layout_width="66dp"
            android:layout_height="34dp"
            android:background="@drawable/bg_feed_delete_button"
            android:text="삭제"
            android:textAllCaps="false"
            android:textColor="@color/music_text_main"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
