<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music_home_gradient"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_feed_topbar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <ImageButton
            android:id="@+id/back_userset"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_home_soft_button"
            android:contentDescription="뒤로가기"
            android:padding="10dp"
            app:srcCompat="@drawable/arrowback"
            app:tint="@color/music_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="프로필 설정"
            android:textColor="@color/music_text_main"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:paddingBottom="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_profile_hero_card"
                android:orientation="vertical"
                android:padding="14dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage_userset"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center"
                    android:src="@drawable/blank_profile"
                    app:civ_border_color="@color/music_primary"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/profiledefault_userset"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_home_soft_button"
                        android:text="기본 이미지"
                        android:textAllCaps="false"
                        android:textColor="@color/music_text_main"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/profileEdit_userset"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_music_action_button"
                        android:text="사진 변경"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="칭호 목록은 도전과제 화면 진입 시 업데이트됩니다."
                    android:textColor="@color/music_text_sub"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_feed_post_card"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="칭호"
                    android:textColor="@color/music_text_sub"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/titlespin_userset"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_map_input_field" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="닉네임"
                    android:textColor="@color/music_text_sub"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/userappname_userset"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_map_input_field"
                    android:hint="닉네임 입력"
                    android:inputType="textPersonName"
                    android:maxEms="10"
                    android:paddingHorizontal="12dp"
                    android:textColor="@color/music_text_main"
                    android:textColorHint="@color/music_text_sub"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/checkdup_userset"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_home_soft_button"
                    android:text="닉네임 중복 확인"
                    android:textAllCaps="false"
                    android:textColor="@color/music_text_main"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/curappname_userset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/music_text_sub"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_feed_post_card"
                android:orientation="vertical"
                android:padding="12dp">

                <Button
                    android:id="@+id/changeWalkingAnimalButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_home_soft_button"
                    android:text="워킹 애니멀 변경"
                    android:textAllCaps="false"
                    android:textColor="@color/music_text_main"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/setprofile_userset"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_music_action_button"
                    android:text="저장"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/loading_userset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="로딩중..."
                    android:textColor="@color/music_text_sub"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
