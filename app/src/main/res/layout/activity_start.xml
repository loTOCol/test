<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music_home_gradient"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".feature.auth.ui.StartActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/StartText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scdream9"
            android:gravity="center"
            android:includeFontPadding="false"
            android:letterSpacing="0.05"
            android:text="Walking Mate"
            android:textColor="@color/music_primary_dark"
            android:textSize="42sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/scdream5"
            android:gravity="center"
            android:letterSpacing="0.08"
            android:text="Walk Better, Every Day"
            android:textColor="@color/music_text_sub"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_music_surface"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="18dp">

        <TextView
            android:id="@+id/permlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_map_goal_badge"
            android:padding="10dp"
            android:text="권한 안내"
            android:textColor="@color/music_text_main"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/permission"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_map_option_item"
            android:text="권한 설정으로 이동"
            android:textAllCaps="false"
            android:textColor="@color/music_text_main"
            android:textStyle="bold"
            android:visibility="gone" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_map_input_field"
            android:hint="아이디"
            android:paddingHorizontal="12dp"
            android:textColor="@color/music_text_main"
            android:textColorHint="@color/music_text_sub"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_map_input_field"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:paddingHorizontal="12dp"
            android:textColor="@color/music_text_main"
            android:textColorHint="@color/music_text_sub"
            android:visibility="invisible" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_music_action_button"
            android:text="로그인"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_map_option_item"
            android:text="회원가입"
            android:textAllCaps="false"
            android:textColor="@color/music_text_main"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
            android:id="@+id/buttonOAuthLoginImg"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>
