<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoinShopProfile1">

    <LinearLayout
        android:id="@+id/fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_feed_topbar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageButton
                android:id="@+id/back_coinshopPro"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_home_soft_button"
                android:contentDescription="뒤로가기"
                android:padding="10dp"
                app:srcCompat="@drawable/arrowback"
                app:tint="@color/music_primary" />

            <TextView
                android:id="@+id/title_emoji"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="코인샵"
                android:textColor="@color/music_text_main"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_profile_stat_chip"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="GIF"
                android:textColor="@color/music_primary"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_feed_post_card"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="유저 이름"
                android:textColor="@color/music_text_main"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/coinImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/coin" />

            <TextView
                android:id="@+id/coinCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x 0"
                android:textColor="@color/music_text_main"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ListView
            android:id="@+id/productview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="8dp"
            android:listSelector="@android:color/transparent"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/loading_coinshop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blurblack"
        android:gravity="center"
        android:text="로딩중..."
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:visibility="invisible" />

</FrameLayout>

