<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_report_sheet"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="채팅방 이름 변경"
        android:textColor="@color/music_text_main"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="비워두면 참가자 이름으로 자동 표시됩니다."
        android:textColor="@color/music_text_sub"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/rename_input"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_report_input"
        android:hint="채팅방 이름 입력"
        android:inputType="text"
        android:paddingHorizontal="12dp"
        android:textColor="@color/music_text_main"
        android:textColorHint="@color/music_text_sub"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rename_default"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_home_soft_button"
            android:text="기본으로"
            android:textAllCaps="false"
            android:textColor="@color/music_text_sub"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/rename_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_home_soft_button"
            android:text="취소"
            android:textAllCaps="false"
            android:textColor="@color/music_text_sub"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/rename_save"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_music_action_button"
            android:text="저장"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
