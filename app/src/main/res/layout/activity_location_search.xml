<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music_home_gradient"
    android:orientation="vertical"
    tools:context=".LocationSearchActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="2"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_mate_filter_panel"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:id="@+id/edit_address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/bg_mate_filter_input"
                android:drawableEnd="@drawable/search_icon_writing"
                android:hint="주소명으로 위치 검색"
                android:inputType="textPersonName"
                android:paddingStart="12dp"
                android:paddingEnd="10dp"
                android:textColor="@color/music_text_main"
                android:textColorHint="@color/music_text_sub" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:background="@drawable/bg_home_soft_button"
                    android:textColor="@color/music_primary"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_margin="4dp"
                    android:id="@+id/reqRoute"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="경로 보기" />

                <Button
                    android:background="@drawable/bg_music_action_button"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_margin="4dp"
                    android:id="@+id/addloc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="목적지 추가" />

                <Button
                    android:background="@drawable/bg_home_soft_button"
                    android:textColor="@color/music_primary"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_margin="4dp"
                    android:id="@+id/sync"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="내 위치" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="12dp"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_feed_map_card"
            android:orientation="vertical"
            android:padding="6dp">
            <fragment
                android:id="@+id/testmap"
                android:name="com.naver.maps.map.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@android:layout/activity_list_item" />

            <TextView
                android:visibility="invisible"
                android:background="@color/blurblack"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/loading_mate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="로딩중..." />

        </FrameLayout>

        <LinearLayout
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_mate_filter_panel"
            android:orientation="vertical"
            android:padding="8dp">

            <ListView
                android:id="@+id/destList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/transparent"
                android:dividerHeight="4dp" />

        </LinearLayout>

        <Button
            android:id="@+id/finish_setroute"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_music_action_button"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="목적지 반영" />
    </LinearLayout>
</LinearLayout>
