<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_feed_post_card"
    android:gravity="center_vertical"
    android:minHeight="78dp"
    android:orientation="horizontal"
    android:padding="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage_blockuser"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/blank_profile" />

    <TextView
        android:id="@+id/user_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="닉네임 (성별/나이)"
        android:textColor="@color/music_text_main"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/cancel_block"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/bg_profile_stat_chip"
        android:paddingHorizontal="12dp"
        android:text="해제"
        android:textColor="@color/music_primary"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>