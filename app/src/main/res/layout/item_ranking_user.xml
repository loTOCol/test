<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:background="@drawable/bg_feed_post_card"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/ranking_item_rank"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/bg_home_soft_button"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/music_primary"
        android:textSize="12sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ranking_item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/blank_profile"
        app:civ_border_color="@color/music_card_stroke"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/ranking_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Name"
        android:textColor="@color/music_text_main"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ranking_item_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 걸음"
        android:textColor="@color/music_text_sub"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>
