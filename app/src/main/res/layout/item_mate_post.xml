<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/mate_body"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/bg_mate_post_card"
    android:paddingHorizontal="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginBottom="4dp"
        android:id="@+id/mate_title"
        android:textSize="15sp"
        android:text="메이트 게시물 제목"
        android:layout_gravity="left"
        android:textColor="@color/music_text_main"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/calendar_icon" />

        <TextView
            android:layout_marginStart="6dp"
            android:textColor="@color/music_text_sub"
            android:id="@+id/mate_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textStyle="bold"
            android:text="2022/10/11 ~ 2022/10/13" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_board_chevron" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mate_writetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/music_text_sub"
            android:textSize="11sp"
            android:text="2022/10/11 10:23" />
        <View
            android:layout_marginHorizontal="7dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/music_text_sub"/>
        <TextView
            android:id="@+id/mate_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/music_text_sub"
            android:textSize="11sp"
            android:textStyle="bold"
            android:text="작성자 1" />
    </LinearLayout>

</LinearLayout>
