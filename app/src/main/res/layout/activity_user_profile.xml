<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music_home_gradient"
    tools:context=".feature.user.ui.UserProfileActivity">

    <ScrollView
        android:id="@+id/profile_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:clipToPadding="false"
        android:paddingHorizontal="14dp"
        android:paddingTop="12dp"
        android:paddingBottom="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/bg_home_topbar"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <ImageButton
                    android:id="@+id/back_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_music_icon_button"
                    android:contentDescription="뒤로가기"
                    android:padding="10dp"
                    app:srcCompat="@drawable/arrowback" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="사용자 프로필"
                    android:textColor="@color/music_text_main"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/report_group_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_profile_report_pill"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="6dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <ImageButton
                        android:id="@+id/report_profile"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:contentDescription="신고하기"
                        android:focusable="false"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_siren" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="신고"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_profile_hero_card"
                android:orientation="vertical"
                android:padding="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage_userprofile"
                        android:layout_width="104dp"
                        android:layout_height="104dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/blank_profile"
                        app:civ_border_color="@color/music_primary"
                        app:civ_border_overlay="false"
                        app:civ_border_width="2dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/appname_userprofile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="닉네임"
                            android:textColor="@color/music_text_main"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_profile_stat_chip"
                            android:orientation="horizontal"
                            android:paddingHorizontal="9dp"
                            android:paddingVertical="5dp">

                            <TextView
                                android:id="@+id/gender_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="성별"
                                android:textColor="@color/music_text_main"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="6dp"
                                android:text="/"
                                android:textColor="@color/music_text_sub"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/age_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="나이"
                                android:textColor="@color/music_text_main"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:baselineAligned="false"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/feed_profile"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_profile_stat_chip"
                        android:text="피드 보기"
                        android:textAllCaps="false"
                        android:textColor="@color/music_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/block_profile"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_music_action_button"
                        android:text="차단"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="함께 걷는 메이트를 위한 프로필입니다"
                    android:textColor="@color/music_text_sub"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_mate_filter_panel"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="대표 칭호"
                    android:textColor="@color/music_text_sub"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/title_userprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="사용 중인 칭호가 없습니다."
                    android:textColor="@color/music_text_main"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_mate_filter_panel"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="걸음 기록"
                    android:textColor="@color/music_text_main"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="오늘 걸음"
                        android:textColor="@color/music_text_sub"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="누적 걸음"
                        android:textColor="@color/music_text_sub"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- compatibility only: keep legacy reliability ids hidden -->
            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="gone">

                <View
                    android:id="@+id/reliable_background_pro"
                    android:layout_width="1dp"
                    android:layout_height="1dp" />

                <View
                    android:id="@+id/reliable_mainred_pro"
                    android:layout_width="1dp"
                    android:layout_height="1dp" />

                <View
                    android:id="@+id/reliable_vertical_pro"
                    android:layout_width="1dp"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/reliable_number_pro"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:text="0" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/loading_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blurblack"
        android:gravity="center"
        android:text="로딩중..."
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

</FrameLayout>
