<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/body_chatroom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_feed_post_card"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chatroomname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Title"
            android:textColor="@color/music_text_main"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chatroommeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="24/08/13 21:00"
            android:textColor="@color/music_text_sub"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lastmsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/music_text_sub"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/usernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_home_soft_button"
            android:paddingHorizontal="7dp"
            android:paddingVertical="2dp"
            android:text="4"
            android:textColor="@color/music_text_sub"
            android:textSize="11sp" />

        <ImageButton
            android:id="@+id/outroom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_home_soft_button"
            android:contentDescription="채팅방 나가기"
            android:padding="7dp"
            android:src="@drawable/icon_logout_xml"
            android:tint="@color/music_primary" />
    </LinearLayout>

</LinearLayout>
