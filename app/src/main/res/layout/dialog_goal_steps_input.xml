<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_music_surface"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="18dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="직접 입력"
        android:textColor="@color/music_text_sub"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/scdream9"
        android:text="목표 걸음 수 설정"
        android:textColor="@color/music_text_main"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_goal_steps"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_map_input_field"
        android:gravity="center_vertical"
        android:hint="예: 4500"
        android:inputType="number"
        android:paddingHorizontal="14dp"
        android:textColor="@color/music_text_main"
        android:textColorHint="@color/music_text_sub"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_goal_input_cancel"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_map_option_item"
            android:text="취소"
            android:textAllCaps="false"
            android:textColor="@color/music_text_main"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_goal_input_apply"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_music_action_button"
            android:text="적용"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
