<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_feed_post_card"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/body_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userimg_review"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/blank_profile"
            app:civ_border_color="@color/music_card_stroke"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/name_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="유저명"
            android:textColor="@color/music_text_main"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RatingBar
        android:id="@+id/rating_review"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="5"
        android:stepSize="0.5" />

    <Button
        android:id="@+id/finish_review"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_music_action_button"
        android:text="리뷰 완료"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

</LinearLayout>
