<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_feed_post_card"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textColor="@color/music_text_main"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="현재 계정에서 로그아웃할까요?"
        android:textColor="@color/music_text_sub"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_logout_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_profile_stat_chip"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:text="취소"
            android:textColor="@color/music_text_main"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_logout_confirm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_board_chip"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:text="로그아웃"
            android:textColor="@color/music_primary"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>