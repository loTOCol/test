<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WalkingMate"
        tools:targetApi="31">

        <activity android:name=".feature.music.ui.MusicActivity"
                  android:exported="false">
        </activity>
        <activity android:name=".feature.music.ui.MusicUploadActivity"
            android:exported="false">
        </activity>
        <activity android:name=".feature.music.ui.MusicItemActivity"
            android:exported="false">
        </activity>

        <activity android:name=".feature.music.ui.MusicPlayActivity"
            android:exported="false">
        </activity>

        <activity android:name=".feature.music.ui.MainMusicActivity"
            android:exported="false">
        </activity>

        <activity android:name=".feature.music.ui.IntervalActivity"
            android:exported="false">
        </activity>

        <activity android:name=".feature.music.ui.MusicRecommendActivity"
            android:exported="false">
        </activity>
        <activity android:name=".feature.music.ui.MusicRecommendationDetailActivity"
            android:exported="false">
        </activity>

        <activity android:name=".feature.auth.ui.SignupActivity"
            android:exported="false">
        </activity>

        <receiver
            android:name=".feature.walk.receiver.ResetStepCountReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>
        <activity
            android:name=".feature.common.ui.TimeSelector"
            android:exported="false"
            android:theme="@android:style/Theme.Dialog">        </activity>
        <activity
            android:name=".feature.common.ui.DateSelector"
            android:exported="false"
            android:theme="@android:style/Theme.Dialog">        </activity>
        <activity
            android:name=".feature.schedule.ui.ScheduleActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.schedule.ui.ReportActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Dialog">        </activity>
        <activity
            android:name=".feature.user.ui.UserProfileActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.mate.ui.MateViewActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.chat.ui.ChatActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.user.ui.EditUserProfileActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.walk.ui.WalkUserListActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Dialog">        </activity>
        <activity
            android:name=".feature.feed.ui.ViewFeedActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.user.ui.SettingProfileActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.feed.ui.SelectFeedActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Dialog">        </activity>
        <activity
            android:name=".feature.mate.ui.MateWriteActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.walk.ui.EndTrackingActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Dialog">        </activity>
        <activity
            android:name=".feature.map.ui.SetLocationWalkActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.walk.ui.WalkWriteActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.walk.ui.MeasureSpeedActivity"
            android:exported="false">        </activity>
        <service
            android:name=".feature.walk.service.TimecheckingService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".feature.music.service.MusicService"
            android:enabled="true"
            android:exported="false" />
        <activity
            android:name=".feature.misc.ui.UiTestingActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.misc.ui.SearchActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.map.ui.LocationSearchActivity"
            android:exported="false">        </activity>

        <service
            android:name=".feature.walk.service.StepCounterService"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".feature.walk.service.LocationService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".feature.user.ui.AppInfoActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.user.ui.HelpInfoActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.user.ui.ManageFriendActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.misc.ui.ChallengeActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.auth.ui.StartActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".feature.auth.ui.IntroSplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>        </activity>
        <activity
            android:name=".feature.feed.ui.WalkingHomeActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize">        </activity>
        <activity
            android:name=".feature.feed.ui.FeedWriteActivity"
            android:exported="false">        </activity>
        <activity
            android:name=".feature.feed.ui.FeedActivity"
            android:exported="false">        </activity>

        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="${NAVER_MAP_CLIENT_ID}" />

        <activity
            android:name=".feature.map.ui.MapActivity"
            android:exported="false"
            android:launchMode="singleTask">        </activity>
        <activity
            android:name=".feature.shop.ui.CoinShopProfile1"
            android:exported="false">
        </activity>
        <activity
            android:name=".feature.shop.ui.CoinShopProfile2"
            android:exported="false">
        </activity>
        <activity
            android:name=".feature.shop.ui.CoinShopActivity"
            android:exported="false">
        </activity>

        <activity
            android:name="com.nhn.android.naverlogin.ui.OAuthCustomTabActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="behind"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Intent URL 에서 로그인 액티비티를 실행하기 위해 설정 -->
                <data
                    android:host="authorize"
                    android:path="/"
                    android:scheme="naver3rdpartylogin" />
            </intent-filter>
        </activity>
    </application>

</manifest>




